{
  "env": {
  	"browser": true,
  	"es6": true,
  	"commonjs": true,
    "node": true
  },
  "extends": ["eslint:recommended", "wordpress"],
  "parserOptions": {
  	"sourceType": "module"
  },
  "globals": {
    "document": true
  },
  "rules": {
    "indent": ["error", "tab"],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
